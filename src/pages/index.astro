---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import ClientsSection from "../components/ClientSection.astro";
import TeamSection from "../components/TeamSection.astro";
---

<BaseLayout title="i4D - Ideas for Development">
  <Fragment slot="header">
    <Header />
  </Fragment>

  <!-- Hero -->
  <HeroSection />

  <!-- Sección introductoria -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 text-center"  data-aos="fade-up">
      <h2 class="text-3xl font-bold text-dark mb-6">¿Qué hacemos?</h2>
      <p class="text-lg max-w-3xl mx-auto text-medium">
        Acompañamos a empresas y organizaciones a lograr una evolución estratégica del talento,
        la tecnología y la gestión del cambio.
      </p>
    </div>
  </section>
  <ClientsSection />
  <TeamSection />
  <Fragment slot="footer">
    <Footer />
  </Fragment>
</BaseLayout>
