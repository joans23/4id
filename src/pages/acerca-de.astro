---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TeamSection from "../components/TeamSection.astro";
---
<style>
   @reference "tailwindcss";
</style>

<BaseLayout title="Acerca de - i4D">
  <Fragment slot="header"><Header /></Fragment>

  <!-- HERO -->
  <section class="py-24 bg-soft text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-dark mb-4">Nosotros</h1>
    <p class="text-lg text-dark/70 max-w-2xl mx-auto">
      Un equipo especializado en gestión del talento, desarrollo organizacional e innovación aplicada.
    </p>
  </section>

  <!-- DESCRIPCIÓN -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 max-w-4xl text-center" data-aos="fade-up">

      <p class="text-lg text-dark/75 leading-relaxed">
        <span class="font-rounded">i4D</span> es una red de profesionales especializados en la gestión del talento humano y el desarrollo organizacional. 
        Estamos comprometidos con la investigación —tanto científica como aplicada— y con la creación de soluciones 
        que agregan valor a la gestión de las personas y al desempeño del negocio.
      </p>

    </div>
  </section>

  <TeamSection/>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
