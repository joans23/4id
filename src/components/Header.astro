---
const current = Astro.url.pathname;

const menuItems = [
  { label: "Inicio", href: "/" },
  { label: "Acerca de", href: "/acerca-de" },
  { label: "Servicios", href: "/servicios" },
  { label: "Visión & Valores", href: "/vision-mision-valores" }, 
  { label: "Talent Technologies", href: "/talent-technologies" },
  { label: "Contacto", href: "/contacto" },
];
---

<style>
  @reference "tailwindcss";
</style>

<header id="main-header"
  class="sticky top-0 z-50 bg-white bg-opacity-80 backdrop-blur-sm transition-all duration-300 shadow-sm">
  
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    
    <!-- Logo -->
    <a href="/">
      <img src="/logo_orange.png" alt="i4D" class="h-10" />
    </a>

   <!-- Desktop menu -->
<nav class="hidden md:flex gap-6 font-semibold text-dark">
  {menuItems.map((item) => {
    const isActive =
      item.href === "/"
        ? current === "/"
        : current.startsWith(item.href);

    return (
      <a
        href={item.href}
        class={`relative pb-1 group transition-colors duration-300
          ${
            isActive
              ? "text-[var(--color-primary)] font-bold"
              : "text-dark hover:text-[var(--color-primary)]"
          }`}
      >
        {item.label}

        <!-- Underline animado desde el centro -->
        <span
          class={`absolute left-1 -bottom-1 h-[2px] bg-[var(--color-primary)] transition-all duration-300 ease-out
            ${
              isActive
                ? "w-full left-1"
                : "w-0 -translate-x-1 group-hover:w-full group-hover:left-1"
            }
          `}
        ></span>
      </a>
    );
  })}
</nav>





    <!-- Mobile button -->
    <button id="mobile-menu-button" class="md:hidden text-dark text-2xl">
      ☰
    </button>
  </div>

  <!-- Mobile dropdown -->
  <nav id="mobile-menu" class="hidden md:hidden bg-white border-t shadow">
    {menuItems.map((item) => (
      <a 
        href={item.href}
        class={`block px-6 py-3 border-b transition
          ${
            current === item.href || current.startsWith(item.href)
              ? "bg-soft text-[var(--color-primary)] font-semibold"
              : "hover:bg-soft text-dark"
          }`}
      >
        {item.label}
      </a>
    ))}
  </nav>

  <script>
    const header = document.getElementById("main-header");
    const btn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");

    // Mobile toggle
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });

    // Scroll effect
    window.addEventListener("scroll", () => {
      if (window.scrollY > 20) {
        header.classList.add("bg-opacity-100", "shadow-lg");
        header.classList.remove("bg-opacity-80", "shadow-sm");
      } else {
        header.classList.add("bg-opacity-80", "shadow-sm");
        header.classList.remove("bg-opacity-100", "shadow-lg");
      }
    });
  </script>

</header>
