---
const current = Astro.url.pathname;

const menuItems = [
  { label: "Inicio", href: "/" },
  { label: "Acerca de", href: "/acerca-de" },
  { label: "Servicios", href: "/servicios" },
  { label: "Visión & Valores", href: "/vision-mision-valores" }, 
  { label: "Talent Technologies", href: "/talent-technologies" },
  { label: "Contacto", href: "/contacto" },
];
---

<style>
  @reference "tailwindcss";
</style>

<header id="main-header"
  class="sticky top-0 z-50 bg-white bg-opacity-80 backdrop-blur-sm transition-all duration-300 shadow-sm">
  
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    
    <!-- Logo -->
    <a href="/">
      <img src="/logo_orange.png" alt="i4D" class="h-10" />
    </a>

   <!-- Desktop menu -->
<nav class="hidden md:flex gap-6 font-semibold text-dark">
  {menuItems.map((item) => {
    const isActive =
      item.href === "/"
        ? current === "/"
        : current.startsWith(item.href);

    return (
      <a
        href={item.href}
        class={`relative pb-1 group transition-colors duration-300
          ${
            isActive
              ? "text-[var(--color-primary)] font-bold"
              : "text-dark hover:text-[var(--color-primary)]"
          }`}
      >
        {item.label}

        <!-- Underline animado desde el centro -->
        <span
          class={`absolute left-1 -bottom-1 h-[2px] bg-[var(--color-primary)] transition-all duration-300 ease-out
            ${
              isActive
                ? "w-full left-1"
                : "w-0 -translate-x-1 group-hover:w-full group-hover:left-1"
            }
          `}
        ></span>
      </a>
    );
  })}
</nav>





    <!-- Mobile button -->
    <button 
  id="mobile-menu-button" 
  class="md:hidden flex flex-col items-center justify-center w-[35px] h-8 relative"
  aria-label="Abrir menú"
>
  <span class="hamburger-line top-line"></span>
  <span class="hamburger-line middle-line"></span>
  <span class="hamburger-line bottom-line"></span>
</button>

<style>
  @reference "tailwindcss";

  .hamburger-line {
    @apply block w-6 h-[3px] bg-black rounded transition-all duration-300 ease-in-out;
  }

  .top-line {
    @apply translate-y-[-7px];
  }

  .middle-line {
    @apply opacity-100;
  }

  .bottom-line {
    @apply translate-y-[7px];
  }

  /* Estado activo → convierte en X */
  .open .top-line {
    transform: translateY(0px) rotate(45deg);
    @apply translate-y-[1px];
     @apply w-[35px];
  }

  .open .middle-line {
    opacity: 0;
  }

  .open .bottom-line {
    transform: translateY(0px) rotate(-45deg);
    @apply translate-y-[-5px];
    @apply w-[35px];
  }
</style>
  </div>

  <!-- Mobile dropdown -->
<nav 
  id="mobile-menu" 
  class="max-h-0 overflow-hidden md:hidden bg-white border-t shadow transition-all duration-300"
>
  {menuItems.map((item) => {
    const isActive =
      item.href === "/"
        ? current === "/"
        : current.startsWith(item.href);

    return (
      <a 
        href={item.href}
        class={`block px-6 py-3 border-b transition relative
          ${
            isActive
              ? "bg-soft font-semibold text-[var(--color-primary)]"
              : "text-dark hover:bg-soft"
          }`}
      >
        {item.label}

        {isActive && (
          <span class="absolute left-0 top-0 h-full w-1.5 bg-[var(--color-primary)] rounded-r"></span>
        )}
      </a>
    );
  })}
</nav>



<script>
  const header = document.getElementById("main-header");
  const btn = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  btn.addEventListener("click", () => {
    // Toggle animación del menú
    if (menu.style.maxHeight && menu.style.maxHeight !== "0px") {
      menu.style.maxHeight = "0px";
      btn.classList.remove("open");
    } else {
      menu.style.maxHeight = menu.scrollHeight + "px";
      btn.classList.add("open");
    }
  });

  // Scroll effect
  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      header.classList.add("bg-opacity-100", "shadow-lg");
      header.classList.remove("bg-opacity-80", "shadow-sm");
    } else {
      header.classList.add("bg-opacity-80", "shadow-sm");
      header.classList.remove("bg-opacity-100", "shadow-lg");
    }
  });
</script>



</header>
