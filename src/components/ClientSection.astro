---
import { Swiper, SwiperSlide, SwiperWrapper } from 'astro-swiper';
import 'swiper/css';
import 'swiper/css/autoplay';

const { clients } = Astro.props;
---

<style>
   @reference "tailwindcss";
  .logo-card{
    @apply flex items-center justify-center bg-white rounded-xl shadow-sm p-6 transition transform hover:scale-105;
  }
  .logo-img{
    @apply max-h-16 w-auto object-contain opacity-90 hover:opacity-100 transition;
  }
</style>

<section class="w-full py-16">
  <h2 class="text-2xl md:text-3xl font-bold text-dark text-center mb-10 tracking-tight">
    Empresas que confiaron en nosotros
  </h2>
  <Swiper
    options={{
      spaceBetween:30,
      slidesPerView:2,
      autoplay:{delay:2800},
      loop:true,
      breakpoints:{
              640:{ slidesPerView: 3},
              768:{ slidesPerView: 4},
              1024:{ slidesPerView:6}
            }
    }}>
    <SwiperWrapper>
 {clients.map((c)=>(
    <SwiperSlide>
      <div class="logo-card">
        <img src={c.url} alt={c.name} class="logo-img"/>
      </div>
    </SwiperSlide>
  ))}
    </SwiperWrapper>
 
  </Swiper>
</section>